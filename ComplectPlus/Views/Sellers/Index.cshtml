@model IEnumerable<ComplectPlus.Models.Seller>

@{
    ViewData["Title"] = "Поставщики";
}

<h1>Поставщик</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SellerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellerUrName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellerAdress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SellerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellerUrName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellerAdress)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.SellerId">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.SellerId">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.SellerId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
