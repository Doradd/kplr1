@model IEnumerable<ComplectPlus.Models.Staff>

@{
    ViewData["Title"] = "Сотрудники";
}

<h1>Сотрудники</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doljnosts)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Doljnosts.DoljnostName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.StaffId">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.StaffId">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.StaffId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
