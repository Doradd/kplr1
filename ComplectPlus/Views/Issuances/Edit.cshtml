@model ComplectPlus.Models.Issuance

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактирование</h1>

<h4>Выдача</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IssuanceId" />
            <div class="form-group">
                <label asp-for="ComponentId" class="control-label"></label>
                <input asp-for="ComponentId" class="form-control" />
                <span asp-validation-for="ComponentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffId" class="control-label"></label>
                <select asp-for="StaffId" class="form-control" asp-items="ViewBag.StaffId"></select>
                <span asp-validation-for="StaffId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateIssuance" class="control-label"></label>
                <input asp-for="DateIssuance" class="form-control" />
                <span asp-validation-for="DateIssuance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
