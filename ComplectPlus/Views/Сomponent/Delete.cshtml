@model ComplectPlus.Models.Сomponent

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы точно хотите удалить?</h3>
<div>
    <h4>Комплектующие</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ComponentsName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComponentsName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.YearRelease)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearRelease)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categories)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categories.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturers)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manufacturers.ManufacturerName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ComponentId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.CategoryId">Назад к списку</a>
    </form>
</div>
