@model ComplectPlus.Models.Сomponent

@{
    ViewData["Title"] = "Создание";
}

<h1>Создание</h1>

<h4>Комплектующие</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ComponentsName" class="control-label"></label>
                <input asp-for="ComponentsName" class="form-control" />
                <span asp-validation-for="ComponentsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearRelease" class="control-label"></label>
                <input asp-for="YearRelease" class="form-control" />
                <span asp-validation-for="YearRelease" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="CategoryId" class="control-label"></label>*@
                <input type="hidden" name="CategoryId" class="form-control" value="@ViewBag.CategoryId">
            </div>
            <div class="form-group">
                <label asp-for="ManufacturerId" class="control-label"></label>
                <select asp-for="ManufacturerId" class ="form-control" asp-items="ViewBag.ManufacturerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewBag.CategoryId">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
